<% @articles.each do |article| %>
  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey lighten-5">
        <div class="card-content black-text">
          <span class="card-title"><%= article.user.nickname %>さん</span>
          <p><%= article.text %></p>
        </div>
        <div class="card-action">
          <a href="#">EDIT</a>
          <a href="#">DELETE</a>
        </div>
      </div>
    </div>
  </div>
<% end %>
<%= paginate(@articles) %>